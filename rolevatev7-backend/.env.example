# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=your_username
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=rolevate

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# JWT Secret - Use a long random string (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=change_this_to_a_long_random_string_minimum_32_characters

# Bcrypt rounds for password hashing (default: 12)
BCRYPT_ROUNDS=12

# Password reset token expiry in minutes (default: 15)
RESET_TOKEN_EXPIRY_MINUTES=15

# System API key for internal service communication
# Generate with: openssl rand -hex 32
SYSTEM_API_KEY=your_system_api_key_here

# ========================================
# CORS & FRONTEND
# ========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Frontend URL for redirects and links
FRONTEND_URL=http://localhost:3000

# ========================================
# AWS CONFIGURATION
# ========================================
# AWS Credentials (Use IAM roles in production instead of keys)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=me-central-1
AWS_BUCKET_NAME=your-bucket-name

# Optional: Admin credentials (only for maintenance tasks)
AWS_ADMIN_ACCESS_KEY_ID=your_admin_access_key_id
AWS_ADMIN_SECRET_ACCESS_KEY=your_admin_secret_access_key

# AWS SES Configuration
EMAIL_FROM=admin@yourdomain.com

# ========================================
# WHATSAPP BUSINESS API
# ========================================
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token
WHATSAPP_APP_SECRET=your_app_secret
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# ========================================
# FACEBOOK APP CONFIGURATION
# ========================================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_SYSTEM_USER_ID=your_system_user_id
FACEBOOK_SYSTEM_USER_TOKEN=your_system_user_token

# ========================================
# LIVEKIT (VIDEO INTERVIEWS)
# ========================================
LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ========================================
# EXTERNAL SERVICES
# ========================================
# FastAPI CV Analysis Service
CV_ANALYSIS_API_URL=http://localhost:8000
FASTABI_URL=http://localhost:8000

# FastAPI AI Services (Company Description, Job Analysis, etc.)
FASTAPI_URL=http://localhost:8005

# GraphQL API URL (for callbacks)
GRAPHQL_API_URL=http://localhost:4005/api/graphql

# OpenAI API Key for CV analysis and AI features
OPENAI_API_KEY=your_openai_api_key

# ========================================
# APPLICATION SETTINGS
# ========================================
# Node environment (development, production, test)
NODE_ENV=development

# Application port
PORT=4005
